@using Household_Balance_Tracker.Models.ViewModels

@model PersonViewModel

@{
    ViewData["Title"] = "Insert Person";
}

<div class="form-div">
    <h1>@ViewData["Title"]</h1>

    @using (Html.BeginForm("InsertPerson", "Person", FormMethod.Post))
    {
        <div class="form-group">
            <label for="personName">Name</label>
            @Html.TextBoxFor(m => m.name, new { id = "personName", @class = "form-control form-field", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.name, null ,new { @class = "validation-warning" })
        </div>

        <div class="form-group">
            <label for="personAge">Age</label>
            @Html.TextBoxFor(m => m.age, new { id = "personAge", @class = "form-control form-field", placeholder = "Age" })
            @Html.ValidationMessageFor(m => m.age, null ,new { @class = "validation-warning" })
        </div>

        <div class="form-group">
            <label for="personEmail">Email</label>
            @Html.TextBoxFor(m => m.email, new { id = "personEmail", @class = "form-control form-field", placeholder = "Enter email" })
            @Html.ValidationMessageFor(m => m.email, null ,new { @class = "validation-warning" })
        </div>

        <button type="submit" class="button form-field">Register</button>
    }
</div>

